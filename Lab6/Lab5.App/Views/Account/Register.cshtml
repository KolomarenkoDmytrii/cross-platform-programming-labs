@model RegistrationInfoViewModel

@{
    ViewData["Title"] = "Реєстрація";
}

<h1>Registration</h1>
<form asp-controller="Account" asp-action="Register" method="post">
    <p>
        <label asp-for="Username"></label>
        <input asp-for="Username"/>
        <span asp-validation-for="Username" style="color: red;"></span>
    </p>
    <p>
        <label asp-for="FullName"></label>
        <input asp-for="FullName"/>
        <span asp-validation-for="FullName" style="color: red;"></span>
    </p>
    <p>
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password"/>
        <span asp-validation-for="Password" style="color: red;"></span>
    </p>
    <p>
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" type="password" />
        <span asp-validation-for="ConfirmPassword" style="color: red;"></span>
    </p>
    <p>
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber"/>
        <span asp-validation-for="PhoneNumber" style="color: red;"></span>
    </p>
    <p>
        <label asp-for="Email"></label>
        <input asp-for="Email"/>
        <span asp-validation-for="Email" style="color: red;"></span>
    </p>
    <button type="submit">Register</button>
    <div asp-validation-summary="ModelOnly" style="color: red;"></div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
